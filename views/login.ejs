<!DOCTYPE html>
<html>
<head> 
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <style>
    .container-fluid {
      height: 100vh;
      overflow: hidden;
    }
  </style>
</head>
<body> 
  <section>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 text-black"> 
          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
            <form style="width: 23rem;" action="/login" method="post">
              <% if (typeof errorMessage !== 'undefined') { %>
              <p style="color: red;"><%= errorMessage %></p>
              <% } %>
 
              <% if (typeof message !== 'undefined') { %>
                <p style="color: green;"><%= message %></p>
              <% } %>
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
              <div class="form-outline mb-4">
                <label class="form-label" for="email">Email address</label>
                <input type="email" name="email" id="email" class="form-control form-control-lg" required />
              </div>
              <div class="form-outline mb-4">
                <label class="form-label" for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control form-control-lg" required/>
              </div>
              <div class="pt-1 mb-4"> 
                <input type="submit" value="Login" class="btn btn-outline-info btn-lg btn-block">
                <a type="button" href="/register" class="btn btn-link btn-lg btn-block">Register</a>
              </div>
            </form>
          </div>
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="https://images8.alphacoders.com/118/1186639.png" alt="Login image" class="w-100" style="object-fit: cover; object-position: left; height: 100vh;">
        </div>
      </div>
    </div>
  </section> 
</body>
</html>
